            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container-fluid justify-content-center ">
            <ul class="navbar-nav ">
                <li class="nav-item ">
                    <a class="nav-link" aria-current="page" href="{{path('app_home')}}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " aria-current="page" href="{{path('app_product')}}">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " aria-current="page" href="#">Contact</a>
                </li>
            </ul>
        </div>
        
        {% if app.user %}
        <a class="link-light text-decoration-none" href="#">My account</a>
        <a class="link-light text-decoration-none bi bi-power" href="{{ path('app_logout')}}"></a>
        {% else %}
        <div class="d-flex flex-row">
        <a class="p-2 link-light text-decoration-none bi bi-search bi-sm " href="#"></a>
        <a class="p-2 link-light text-decoration-none bi bi-person bi-sm" href="{{ path('app_login')}}"></a>
        <a class="p-2 link-light text-decoration-none bi bi-bag bi-lg" href="{{path('cart_index')}}"></a>
