 <div class="container" style="padding-top: 5em;">
  <a class="btn btn-secondary btn-sm" href="{{ path('add_product')}}">Add Product<i class="bi bi-folder-plus"></i></a>
  <h4>List of Products</h4>
  <div class="row">
    {% for product in products %}
    <div class="col-md-4 d-flex">
      <div class="card mb-5" style="width: 18rem;">
        {% for image in product.images%}
        <img src="{{asset('/uploads/' ~ image.url)}}" style="object-fit:cover;height:15vw;"class="card-img-top " alt="...">
        {% endfor %}
        <div class="card-body">
          <h5 class="card-title"> {{product.nameProduct}}</h5>
          <a href="{{path("cart_add",{id: product.id})}}" class="btn btn-dark">Add to Cart </a>
          <a href="{{path('show_product',{'id': product.id})}}" class="btn btn-success"><i class="bi bi-three-dots"></i></a>
          <a href="{{path('update_product',{'id': product.id})}}" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  
  

